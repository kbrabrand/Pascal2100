<?xml version="1.0"?>
<project name="pascal2100" default="jar">
    <target name="clean" description="Remove generated files">
        <delete dir="classes"/>
        <delete file="pascal2100.jar"/>
    </target>

    <target name="compile" description="Compile the application">
        <mkdir dir="classes"/>
        <javac srcdir="."
            destdir="classes"
            debug="true"
            debuglevel="lines,vars,source"
            includeantruntime="false" />
    </target>

    <target name="jar" depends="compile" description="Create a JAR file">
        <jar destfile="pascal2100.jar">
            <fileset dir="classes" includes="**/*.class"/>
            <manifest>
                <attribute name="Main-Class" value="no.uio.ifi.pascal2100.main.Main"/>
            </manifest>
        </jar>
    </target>

    <target name="zip" depends="clean" description="Create a ZIP file">
        <zip destfile="inf2100-oblig.zip" basedir="."/>
    </target>
</project>
